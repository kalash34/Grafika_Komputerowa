%!PS



%% Trojkat przez arcto




% x-coord y-coord r ang1 ang2 arc - argumenty procedury arcto

/scale 72 25.4 div def
/Trk {
    2 mul
    scale mul           % skaluje przestrzen uzytkownika
    /r exch def         % exch wymienia liczbe miejscami - wiec otrzymamy promien - nasza zmienna
    scale mul
    /a exch def         % exch wymienia liczbe miejscami - otrzymamy bok trojkata - nasza zmienna
    newpath
    r 0 translate       %zmienia pozycje w ukladzie wspolrzednych [r, 0]
    0 0 moveto
    3 {
    a 0 translate       %zmienia pozycje w ukladzie wspolrzednych [a, 0]
    0 0 lineto
    r
    0
    r 2 div
    r 0.8660254037844386 mul % sqrt(3) / 2 = h
    r 2 div
    arct
    r 2 div
    r 0.8660254037844386 mul
    translate
    120 rotate
    } repeat
    closepath
} def

120 220 translate
100 10 Trk
1 setlinewidth
gsave
1 1 0 setrgbcolor
fill
grestore
1 0 0 setrgbcolor
stroke


showpage
